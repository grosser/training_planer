<% @page_title = "Webinar #{@webinar.title}" %>

<p>
  Starts at <%= @webinar.start %>
</p>

<p>
  <%= @webinar.description %>
</p>

<p>
  Participants <%= @webinar.participations.count %>
</p>

<br/><br/><br/>

<p>
  <h3>RSVP ?</h3>
  <%= form_tag '/participations' do %>
    <%= hidden_field_tag :webinar_id, @webinar.id %>
    <%= input_row label_tag('Your Email') do %>
      <%= email_field_tag :email %>
    <% end %>

    <div class="actions">
      <%= submit_tag 'RSVP', :class => 'btn primary' %>
    </div>
  <% end %>
</p>

